<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_pop1"
        android:src="@drawable/ic_vector_flash_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_pop2"
        android:src="@drawable/ic_vector_flash_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_pop3"
        android:src="@drawable/ic_vector_flash_torch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_pop4"
        android:src="@drawable/ic_vector_flash_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>